$title
time-propagation code
$end

$dvrprop_basis
 number-of-variables=1 coordinate-system=cartesian
 variable-1=x use-atomic-units kinetic-energy-type=fd
 xplot get-eigenpairs print=all-details keep-diagonals
$end

$h0(x)
 automate number-of-major-blocks=1
 number-of-fixed-points=2 left-fixed-point right-fixed-point 
 drop-first-function drop-last-function do-not-diagonalize
 region-boundaries=(-40.d0,40.d0) 
 order-of-finite-difference-formula=3 number-of-steps=1000
 print=(all) sector-print=sector-details 
$end

$v_reg_1(x)
 use-atomic-units potential=none
$end
 
$time
 automate number-of-time-regions=5000 initial-time=0.0 
 time-interval=.0001
 xprint=(main=(xpointers,xpotential,xinitial-state,solution,
              xnon-linear-potential,xh-on-initial-state))
$end

$v0(t1)
 potential=none
$end

$initial-state
 driver=gaussian-pulse sigma=1.d0 alpha=1.d0 beta=4.d0 
$end

$v_couple
  v-space-time=none
$end

