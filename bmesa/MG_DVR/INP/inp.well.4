$route
 number-of-space-dimensions=1 dimension-1=x  directive=diagonalize
 xiterative-diagonalization 
$end
          
$nonstd
62//96;
20//01;
$end

$title
DVR Code
$end

$h0(x)
 number-of-regions=4 polynomial-order-per-region=(5,5,5,5) parity=none
 region-boundaries=(0.d0,.25d0,.5d0,.75d0,1.d0) 
 number-of-fixed-points=2
 left-fixed-point right-fixed-point print=all angular-momentum=0
 drop-first-function drop-last-function
$end

$v0(x)
 use-atomic-units potential=well well-depth=-0.d0
$end

$vpert
 potential=none
$end

$trial
 type-trials=unit
$end

$dvrdvd
 xprint=davidson=all preconditioner=separable
 maximum-number-of-vectors=9 number-of-roots=9
 maximum-number-of-iterations=300 convergence=1.d-05
 number-of-roots-at-a-time=5 number-of-trials=5
$end
