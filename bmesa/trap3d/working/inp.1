$route
 print=(m7000=xall) m7000=xcheck-orthogonality number-of-dimensions=1
 xuse-atomic-units xiterative-diagonalization xto-atomic-units
 number-of-roots=30 xin-coordinate-space coordinate-system=spherical 
 calculation=diagonalize-gross-pitaevski atom=na plot=off 
 xcalculation=diagonalize-h0
$end
          
$nonstd
70//00;
20//01;
$end
$title
3-d trap code
$end
$diis
 number-of-diis-cycles=5 number-of-diis-iterations-per-cycle=20
 diis-switch=off  diis-convergence=5.d-07 xtruncate
 xtruncation-size-of-diis-space=40 print=iteration-information
$end
$xiteration
 number-of-iteration-cycles=1 number-of-iterations-per-cycle=20
 iteration-convergence=1.d-05
$end
$trap
 xminimum-number-of-atoms=3623.d0 xmaximum-number-of-atoms=3623.d0 
 xminimum-number-of-atoms=500.d0 xmaximum-number-of-atoms=500.d0
 xminimum-number-of-atoms=0.d0 xmaximum-number-of-atoms=5000.d0 
 minimum-number-of-atoms=0.d0 maximum-number-of-atoms=1000000.d0 
 number-of-steps=100
$end
$q1-polynomials
 number-of-regions=1 number-of-points-per-region=50 fix-end-points
 left-end-point-for-each-region=0.d0 right-end-point-for-each-region=1.0d-04
 left-fixed-point-region-1=0.d0 right-fixed-point-region-1=1.0e-04 
 coordinate-type=r left-boundary-condition=0 right-boundary-condition=0
$end
$q2-polynomials
 order-of-polynomials=10,number-of-points=12,fix-end-points
 number-of-fixed-points=2, left=-2.5d-05 right=2.5d-05
 xleft=0.d0 xright=15.d0
 order-of-leading-left-polynomials=1 order-of-leading-right-polynomials=0
$end
$davidson
 number-of-roots=1 number-of-trial-vectors=10 to-h0 convergence=1.d-07
 xprint=(davidson=all) 
$end
$v0
 unperturbed-potential-type=harmonic-oscillator  
 omega-11=13.846d0 xomega-22=13.846d0
 xomega-11=10.0
 a11=-1.d0 s11=1.d0 
$end
$v1
 interaction-potential-type=harmonic-oscillator diagonal-potential
 no-off-diagonal-potential omega-11=13.846d0 omega-22=13.846d0
 a11=-1.d0 s11=1.d0 
 a22=-1.d0 s22=1.d0  
$end 
 
